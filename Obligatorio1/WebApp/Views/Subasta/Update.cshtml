@using Dominio
<h1>Detalles de la Subasta</h1>

@if (ViewBag.MsgExito != null)
{
    <div class="alert alert-success text-center">
        @ViewBag.MsgExito
    </div>
}
@if (ViewBag.MsgError != null)
{
    <div class="alert alert-danger text-center">
        @ViewBag.MsgError
    </div>
}

<h2>@Model.Nombre</h2>
<p>Estado: @Model.Estado</p>
<p>Oferta más alta: $@Model.CalcularPrecioFinal().ToString("F2")</p>

<h3>Artículos incluidos:</h3>
<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Articulo articulo in Model.GetArticulos())
        {
            <tr>
                <td>@articulo.Nombre</td>
                <td>@articulo.Categoria</td>
                <td>$@articulo.Precio</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="CerrarSubasta" method="post">
    <input type="hidden" name="id" value="@Model.id" />
    <button type="submit" class="btn btn-primary mt-3">Cerrar subasta</button>
    <a asp-action="ListarSubastas" asp-controller="Administrador" class="btn btn-secondary mt-3">Volver</a>
</form>
